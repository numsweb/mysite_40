<h3>Post a Message to the site Administrator</h3>
  <% if @comment.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this alert from being saved:</h2>

      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@comment) do |f| %>
  <p>
    <b>Message</b> <span class="required">(required)</span><br />
    <%= f.text_area :comment, :rows => 5, :cols => 80 %>
  </p>
  <br/>
  <p>
    <b>Your Email</b> <span class="required">(required)</span><br />
    <%= f.text_field :email %>
  </p>
  <br/>
  <p>
    <%= f.submit "Post Comment" %>
  </p>
<% end %>